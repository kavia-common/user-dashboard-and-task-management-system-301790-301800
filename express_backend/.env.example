# Server Configuration
PORT=3001
HOST=0.0.0.0
NODE_ENV=development

# MongoDB Configuration
# CRITICAL: Replace with your actual MongoDB Atlas connection string
# The IP address of your deployment server must be whitelisted in MongoDB Atlas
# To allow all IPs (for development only), add 0.0.0.0/0 to the IP Access List
MONGO_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/?appName=<app-name>

# JWT Configuration
# IMPORTANT: Use a strong, randomly generated secret (minimum 32 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-secret-key-here

# CORS Configuration
# Set to your frontend URL
CORS_ORIGIN=http://localhost:3000

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001

# WebSocket Configuration (if needed)
WS_URL=ws://localhost:3001/ws

# Site Configuration
SITE_URL=http://localhost:3000

# Additional CORS Settings
ALLOWED_ORIGINS=http://localhost:3000
ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_MAX_AGE=3600

# Proxy Settings
TRUST_PROXY=true

# Request Settings
REQUEST_TIMEOUT_MS=30000
RATE_LIMIT_WINDOW_S=60
RATE_LIMIT_MAX=100

# Cookie Settings (for production with domain)
# COOKIE_DOMAIN=.yourdomain.com
