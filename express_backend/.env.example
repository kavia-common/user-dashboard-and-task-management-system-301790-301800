# Server Configuration
PORT=3001
HOST=0.0.0.0
NODE_ENV=development

# MongoDB Configuration
# MongoDB Atlas connection string - to be provided by user
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/?appName=<appname>
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/?appName=myapp

# JWT Secret
# Strong secret key for JWT token generation - to be provided by user
JWT_SECRET=your_jwt_secret_here

# CORS Configuration
# Frontend URL for CORS - must match your deployed frontend URL
CORS_ORIGIN=http://localhost:3000

# Backend and Frontend URLs
BACKEND_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000
SITE_URL=http://localhost:3000

# CORS Configuration Details
ALLOWED_ORIGINS=http://localhost:3000
ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_MAX_AGE=3600

# Other Configuration
TRUST_PROXY=true
REQUEST_TIMEOUT_MS=30000
RATE_LIMIT_WINDOW_S=60
RATE_LIMIT_MAX=100
